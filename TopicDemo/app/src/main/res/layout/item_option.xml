            android:background="@drawable/btn_white_round_10"/>

        <TextView
            android:id="@+id/tv_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
